// This is your Prisma schema file
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String     @id @default(uuid())
  name      String
  email     String     @unique
  password  String
  createdAt DateTime   @default(now())
  deletedAt DateTime?
  categories Category[]
  cards     Card[]

  @@map("users")
}

model Category {
  id           String         @id @default(uuid())
  title        String         @default("")
  image        String
  imageMetadata ImageMetadata? @relation(fields: [imageMetadataId], references: [id])
  imageMetadataId String?     @unique
  order        Int
  cards        Card[]
  createdBy    User          @relation(fields: [userId], references: [id])
  userId       String
  createdAt    DateTime      @default(now())
  deletedAt    DateTime?
  updatedAt    DateTime      @updatedAt
  hasPreview   Boolean       @default(false)
  isAvailable  Boolean       @default(true)
  previewTitle String        @default("")
  hasSquareContent Boolean     @default(false)

  design      CategoryDesign?

  @@map("categories")
}

model Card {
  id             String         @id @default(uuid())
  title          String
  description    String
  genre          String
  image          String
  imageMetadata  ImageMetadata? @relation(fields: [imageMetadataId], references: [id])
  imageMetadataId String?      @unique
  order          Int          @default(1)
  expiration     DateTime?     // Null represents "infinite"
  isAvailable    Boolean       @default(true)
  createdBy      User          @relation(fields: [userId], references: [id])
  userId         String
  category       Category      @relation(fields: [categoryId], references: [id])
  categoryId     String
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  deletedAt      DateTime?
  isHot          Boolean       @default(false)
  isPreview      Boolean       @default(false)
  isDiscover    Boolean       @default(false)
  href           String       @default("")
  isSquare       Boolean       @default(false)

  @@map("cards")
}

model ImageMetadata {
  id        String    @id @default(uuid())
  width     Int
  height    Int
  size      Int       // Size in KB
  mimeType  String
  url       String
  category  Category?
  card      Card?

   designElement DesignElement?

  @@map("image_metadata")
}

enum DeviceSize {
  mobile
  tablet
  desktop
}

model CategoryDesign {
  id                 String         @id @default(uuid())
  category           Category       @relation(fields: [categoryId], references: [id])
  categoryId         String         @unique
  designElements     DesignElement[]
  backgroundGradient String         @default("")
  transitionGradient String         @default("")
  createdAt          DateTime       @default(now())
  updatedAt          DateTime       @updatedAt
  deletedAt          DateTime?

  @@map("category_designs")
}

model DesignElement {
  id              String         @id @default(uuid())
  url             String
  order           Int
  categoryDesign  CategoryDesign @relation(fields: [categoryDesignId], references: [id])
  categoryDesignId String
  deviceSize      DeviceSize
  imageMetadata   ImageMetadata? @relation(fields: [imageMetadataId], references: [id])
  imageMetadataId String?        @unique
  htmlElements    HtmlElement[]
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  deletedAt       DateTime?

  @@map("design_elements")
}

model HtmlElement {
  id              String         @id @default(uuid())
  designElement   DesignElement  @relation(fields: [designElementId], references: [id])
  designElementId String
  htmlTag         Json           // Stores the JSON structure for HTML elements
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  deletedAt       DateTime?

  @@map("html_elements")
}
